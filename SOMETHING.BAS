100 PRINT "ENTER INPUT CONDITIONS"
110 INPUT  PROMPT "ENTER Y(0): ": Y_INIT
120 INPUT  PROMPT "ENTER SLOPE(0): ": SLOPE_INIT
130 LET X = 0
140 LET Y = Y_INIT
150 LET SLOPE = SLOPE_INIT
160 SET WINDOW -4,4,-4,4
170 SET POINT STYLE 4
180 DRAW GRID
190 LET DX = 0.05
200 FOR I = 0 TO ABS(4/DX)
210    LET Z = Y + DX*SLOPE
220    LET X = X + DX
230    LET SLOPE = SLOPE - DX*(2*SLOPE + Y)
240    PLOT LINES : X,Z; X-DX, Y
250    LET Y = Z
260 NEXT I
270 IF DX > 0 THEN
280    LET DX = -DX
290    LET X = 0
300    LET Y = Y_INIT
310    LET SLOPE = SLOPE_INIT
320    GOTO 200
330 END IF
340 END
  
